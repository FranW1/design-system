
{% set codeUrl = './app/views/components/' + params.componentName + '/examples/includes/'+params.exampleName+'.html' %}

{% set exampleUrl = '/components/' + params.componentName + '/examples/'+params.exampleName %}


{% set nunjucksCode %}
{% code %}js
{{ getNunjucksCode(codeUrl) | safe}}
{% endcode %}
{% endset %}

{% set htmlCode %}
{% code %}html
{{ getHtmlCode(codeUrl) | safe}}
{% endcode %}
{% endset %}

<div class="app-example">

  <span class="app-example__new-window">
    <a href="{{exampleUrl}}" target="_blank">Open this example in a new window</a>
  </span>

  <iframe class="app-example__frame" scrolling="auto" frameborder="0" height="350" src="{{exampleUrl}}"></iframe>

</div>

<div class="app-tabs">

  <ul class="app-tabs__list">
    <li class="app-tabs__list-item"><a class="app-tabs__tab" href="#html">HTML</a></li>
    <li class="app-tabs__list-item"><a class="app-tabs__tab" href="#nunjucks">Nunjucks</a></li>
  </ul>

  <div class="app-tabs__panel app-js-hidden" id="html">
    <button class="app-button app-button--copy app-hide-mobile" type="button" aria-live="assertive">Copy</button>
    <button class="app-button app-button--close" type="button">Close</button>
    {{htmlCode | safe}}
  </div>

  <div class="app-tabs__panel app-js-hidden" id="nunjucks">
    <button class="app-button app-button--copy app-hide-mobile" type="button" aria-live="assertive">Copy</button>
    <button class="app-button app-button--close" type="button">Close</button>
    {{nunjucksCode | safe}}
  </div>

</div>